<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user %>
    <div class="row offset-sm-2">
      <div class="col-sm-8 offset-sm-1">
        <div class="form-group row"  >
          <%= f.label t('order.name'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.text_field :name , class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label t('order.address'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.text_area :address, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label t('order.email'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.email_field :email, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label  t('order.phone'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.phone_field :phone, class:"form-control" %>
          </div>
        </div>
        <div class="actions" style="padding-top: 15px">
          <%= f.submit class:"btn btn-outline-dark" %>
          <%= link_to t('link.back'), root_path , class:"btn btn-outline-dark" , style:"margin-left: 10px;"%>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row offset-sm-2">
      <div class="col-sm-8 offset-sm-1">
        <div class="form-group row"  >
          <%= f.label t('order.name'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label t('order.address'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.text_area :address, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label t('order.email'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.email_field :email, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row"  >
          <%= f.label  t('order.phone'), class:"col-sm-3 col-form-label"%>
          <div class="col-sm-6">
            <%= f.phone_field :phone, class:"form-control" %>
          </div>
        </div>
        <div class="actions" style="padding-top: 15px">
          <%= f.submit class:"btn btn-outline-dark" %>
          <%= link_to t('link.back'), root_path , class:"btn btn-outline-dark" , style:"margin-left: 10px;"%>
        </div>
      </div>
    </div>
  <% end %>
<% end %>