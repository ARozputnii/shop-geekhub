<div>
  <p>
    <% @product.images.each do |image| %>
      <%= image_tag(image.url(:large)) %>
    <% end %>
  </p>
  <%= @product.title %>
  <p>Категория: <%= @product.category.title %></p>
  <p>Описание:  <%= @product.description %></p>
  <p>Стоимость: <%= @product.price %> грн.</p>

  <button type="button" class="btn btn-outline-secondary">buy</button>
  <%= link_to 'Edit', edit_admin_product_path(@product), class:"btn btn-outline-secondary" %>
  <%= link_to 'Destroy', admin_product_path(@product), method: :delete,
              data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %>
  <%= link_to 'back', admin_products_path, class:"btn btn-outline-secondary" %>
</div>