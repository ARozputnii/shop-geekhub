<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label t('order.name')%><br>
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label t('order.address') %><br>
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label t('order.email') %><br>
    <%= f.email_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label t('order.phone') %><br>
    <%= f.phone_field :phone, size: 40 %>
  </div>
  <div class="actions">
    <%= f.submit t('products.form.submit'), class: "btn btn-outline-secondary" %>
  </div>
<% end %>