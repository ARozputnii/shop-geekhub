<%= form_with(model: [ @product, @product.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label t('activerecord.attributes.comment.commenter') %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label t('activerecord.attributes.comment.body') %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>