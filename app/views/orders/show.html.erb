<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('order.name') %>:</strong>
  <%= @order.name %>
</p>

<p>
  <strong><%= t('order.address') %>:</strong>
  <%= @order.address %>
</p>

<p>
  <strong><%= t('order.email') %>:</strong>
  <%= @order.email %>
</p>

<p>
  <strong><%= t('order.phone') %>:</strong>
  <%= @order.phone %>
</p>


<p>
  <% @order.line_items.each do |item| %>
    <p></p><%= item.product.title %>
    <%= item.quantity %>
    <%= item.total_price %>
  <% end %>
</p>
<br>

