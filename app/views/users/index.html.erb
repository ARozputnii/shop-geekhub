<div class="offset-2">
  <p id="notice"><%= notice %></p>
  <table>
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.first_name') %></th>
      <th><%= t('activerecord.attributes.user.last_name') %></th>
      <th>admin?</th>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th><%= t('products.index.link') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.admin %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('link.show'), user %>|
          <%= link_to t('link.edit'), edit_user_path(user) %>|
          <%= link_to t('link.delete'), user, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>