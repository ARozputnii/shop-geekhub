<div>
  <br>

  <h2>Comments</h2>
  <% @product.comments.each do |comment| %>

     <p>
       <%= comment.rating.to_i.times do %>
         <small class="fa fa-star"></small>
       <% end %>
     </p>

    <p>
      <strong>Name:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>
  <br>
</div>