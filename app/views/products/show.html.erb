<div class="background_show">
  <div class="offset-2">
    <% if @product.images? %>
      <% @product.images.each do |image| %>
        <%= image_tag(image.url(:large)) %>
      <% end %>
    <% else %>
      <%= image_tag rand_image_to_heroku%>
    <% end %>
    <div class="justify-content-center"><h2><%= @product.title %></h2></div>
    <div class="row ">
      <div class="col-sm-2">Категория: <%= @product.category.title %></div>
      <div class="col-sm-2">Стоимость: <%= @product.price %> грн.</div>
    </div>
    <p class="description">Описание:  <%= @product.description %></p>
    <div class="row">
      <button type="button" class="btn btn-outline-secondary">Купить</button>
      <%= link_to 'back', products_path, class:"btn btn-outline-secondary" %>
    </div>
  </div>
</div>